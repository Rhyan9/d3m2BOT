<%- include('./partials/head') %>
<%- include('./partials/navbar') %>

<div class="container-fluid text-white p-4 text-center">
    <table class="table table-hover border-black text-center my-3">
        <thead>
            <tr class="table-warning">
                <th scope="col">Username</th>
                <th scope="col">Password</th>
                <th scope="col">HWID</th>
                <th scope="col">Created On</th>
                <th scope="col">Admin</th>
                <th scope="col">Subscribed</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            <% dbUsers.forEach(user => { %>
                <tr>
                    <th scope="row" class="table-info"><%=user.username%></th>
                    <th scope="row" class="table-info"><%=user.password.substring(0,15)%>....</th>
                    <th scope="row" class="table-info"><%=user.hwid%></th>
                    <th scope="row" class="table-info"><%=user.createdOn%></th>
                    <% if(user.admin) {%>
                        <th scope="row" class="table-success">Yes</th>
                    <%} else { %>
                        <th scope="row" class="table-danger">No</th>
                    <%}%> 
                    <% if(user.subscribed) {%>
                        <th scope="row" class="table-success">Yes</th>
                    <%} else { %>
                        <th scope="row" class="table-danger">No</th>
                    <%}%> 
                    
                </tr>
            <%});%> 
        </tbody>
    </table>
</div>



