<%- include('./partials/head') %>
    <%- include('./partials/navbar') %>
        <div class="container-lg d-flex justify-content-center text-white">
            <div class="d-flex  mt-3 py-3 justify-content-center">
                <form method="post" action="/register" id="regForm" class="login-form px-5 py-3">
                    <% if (noCreds) { %>
                        <div class="border border-danger bg-white p-2 mb-4">
                            <h6 class="d-flex justify-content-center m-0 p-0 text-danger">Please enter an email and a
                                password!</h6>
                        </div>
                        <%}%>
                            <% if (exists) { %>
                                <div class="border border-danger bg-white p-2 mb-4">
                                    <h6 class="d-flex justify-content-center m-0 p-0 text-danger">Username already
                                        exists!
                                    </h6>
                                </div>
                                <%}%>
                                <% if (noCaptcha) { %>
                                    <div class="border border-danger bg-white p-2 mb-4">
                                        <h6 class="d-flex justify-content-center m-0 p-0 text-danger">Please Enter the Captcha!
                                        </h6>
                                    </div>
                                    <%}%>
                                    <h2 class="d-flex justify-content-center mb-5">Please Register</h2>
                                    <div class="mb-3">
                                        <label for="username" class="form-label">Username</label>
                                        <input type="text" class="form-control form-control-sm" id="username"
                                            name="username">
                                    </div>
                                    <div class="mb-3">
                                        <label for="password" class="form-label">Password</label>
                                        <input type="password" class="form-control form-control-sm" id="password"
                                            name="password">
                                    </div>

                                    <div class="mb-0">
                                        <label for="hwid" class="form-label">HWID (Optional)</label>
                                        <input type="text" class="form-control form-control-sm mb-0 pb-0" id="hwid"
                                            name="hwid">
                                    </div>
                                    <div id="HWIDhelp" class="form-text mb-4 pt-0 text-white">
                                        <p class="mb-0 pb-0">To find out your HWID, <a class="link-info"
                                                href="https://cdn.discordapp.com/attachments/1021119164301181010/1021119468254023700/hwid_creator.zip"
                                                download>Click here</a></p>
                                        <p class="my-0 pt-0 text-warning">Note: HWID is needed to give access to the BOT
                                        </p>
                                        <p class="my-0 pt-0 text-warning">Note: Include braces when pasting the HWID</p>
                                    </div>
                                    <div class="g-recaptcha d-flex justify-content-center" data-sitekey="6LefA4gmAAAAAM6zfPqJKqDiv_ZzeFx_sl2kus9A"></div>
                                    <div class="d-flex justify-content-center py-2">
                                        <button type="submit" class="btn w-50 btn-success">Register</button>
                                    </div>
                </form>
            </div>
        </div>
        <%- include('./partials/footer') %>