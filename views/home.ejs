<%- include('./partials/head') %>

    <!-- Navbar -->
    <%- include('./partials/navbar') %>
        <!-- Main content -->
        <section id="main-page-content" class="text-white">
            <div class="container-lg my-5">
                <div class="row">
                    <div class="col-md-6">
                        <h1 class="display-10 fw-bold fst-italic">The BEST metin2 bot up to date!</h1>
                        <ul>
                            <li>Completely undetectable by any anti-cheat!</li>
                            <li>Works for <strong>20+</strong> servers! Yes, even Aeldra!</li>
                            <li>Fishbot for the new fishing system</li>
                            <li>Metin bot</li>
                            <li>Easy to use GUI with customization</li>
                            <li>Virtual Machine support (Can be used in the background by a VM)</li>
                        </ul>
                        <p class="fw-100">To see the full list of features, <a class="link-info" href="/features">click
                                Here</a></p>
                    </div>
                    <div class="col-md-6 d-flex justify-content-center">
                        <div id="videos" class="carousel slide">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <iframe allow="fullscreen" width="570px" height="350px"
                                        src="https://www.youtube.com/embed/AFUsHTuptgw" frameborder="0"></iframe>
                                </div>
                                <div class="carousel-item">
                                    <iframe allow="fullscreen" width="570px" height="350px"
                                        src="https://www.youtube.com/embed/jGatU7DmNqk" frameborder="0"></iframe>
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#videos"
                                data-bs-slide="prev">
                                <span class="carousel-control-prev-icon"></span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#videos"
                                data-bs-slide="next">
                                <span class="carousel-control-next-icon"></span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Latest Changelog -->
        <section id="Latest changelog" class="text-white">
            <div class="container-lg  ">
                <h4>
                    Latest Changelogs:
                </h4>
                <% let newArray=postArray.reverse(); %>
                    <% for (let i=0; i < 3; i++) { %>
                        <div class="card changelog-card text-bg-dark" style="width: 100%;">
                            <div class="card-body">
                                <div class="row">
                                    <h5 class="card-title mb-2">
                                        <%= newArray[i].title %>
                                    </h5>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-10">
                                        <% let nums=newArray[i].body.split(/\r\n|\n|\r/); %>
                                            <% for(let i=0; i< nums.length ; i++) { %>
                                                <p class="card-text my-1">
                                                    <%= nums[i] %>
                                                </p>
                                                <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <%};%>
                            <p class="mt-3" style="font-family: 'Ubuntu';">To see the full changelog, <a
                                    class="link-info" href="/changelog">click here</a></p>
            </div>
        </section>


        <%- include('./partials/footer') %>